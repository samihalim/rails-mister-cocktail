<div class="container">

    <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),
      url('https://images.unsplash.com/photo-1591243315780-978fd00ff9db?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60');">
    </div>
  <div class="d-flex">
    <div class="d-flex flex-column">
      <h1><%= @cocktail.name %></h1>
      <% @cocktail.doses.each do |dose| %>
        <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
         <% end %>
      <button class="btn btn-success my-1"><%= link_to 'Add Ingredients', new_cocktail_dose_path(@cocktail) %></button>
      <button class="btn btn-warning mb-1"> <%= link_to 'Back to Home', cocktails_path %> </button>
    </div>

  <div class="ingredients mt-5">
    <ul>
      <% @cocktail.doses.each do |dose| %>
      <li><%= dose.ingredient.name %> | <%= dose.description %> -
        <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fas fa-trash-alt"></i>
      </li>
      <% end %>
      <% end %>
    </ul>
  </div>

  </div>
</div>

