<div class="container">

    <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),
    url('https://images.unsplash.com/photo-1591243315780-978fd00ff9db?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60');">
  </div>
  <div class="container">
  <h1><%= @cocktail.name %></h1>
  <%= cl_image_tag @cocktail.photo.key, height: 100, width: 200, crop: :fill %>
  <%= link_to 'Add ingredients', new_cocktail_dose_path(@cocktail) %>
  <br>
  <%= link_to 'Back to Home', cocktails_path %>
  <br>

<div class="ingredients-text">
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %> | <%= dose.description %> -
      <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="fas fa-trash-alt"></i>
    </li>
    <% end %>
    <% end %>
  </ul>
</div>


